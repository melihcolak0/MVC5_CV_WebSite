@using _41MY_MVCWebSiteCV.Models.Entity
@model List<Tbl_SocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Listesi</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <button class="btn btn-info" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Hesabı Ekle</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">Id</th>
                                            <th>Sosyal Medya Adı</th>
                                            <th>Durum</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {

                                            <tr>
                                                <td>@x.Id</td>
                                                <td>@x.Name</td>
                                                @if (x.State == true)
                                                {
                                                    <td>Aktif</td>
                                                }
                                                else
                                                {
                                                    <td>Pasif</td>
                                                }                                                
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/SocialMedia/DeleteSocialMedia/@x.Id">
                                                        <i class="fas fa-trash"></i>
                                                        Sil
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/SocialMedia/GetSocialMedia/@x.Id">
                                                        <i class="fas fa-pencil-alt"></i>
                                                        Güncelle
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4 class="modal-title w-100">Yeni Sosyal Medya Hesabı Ekleme Paneli</h4>
                    </div>
                    <form method="post" action="/SocialMedia/AddSocialMedia">
                        <div class="modal-body">
                            <label>Sosyal Medya Adı</label>
                            <input type="text" name="Name" class="form-control" />
                            <br />
                            <label>Sosyal Medya Linki</label>
                            <input type="text" name="Link" class="form-control" placeholder="https://website_url.com/user_name" />
                            <br />
                            <label>Sosyal Medya İkonu</label>
                            <input type="text" name="Icon" class="form-control" />
                            <br />
                            <button class="btn btn-success">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>