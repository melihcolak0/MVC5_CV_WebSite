@using _41MY_MVCWebSiteCV.Models.Entity
@model List<Tbl_Abilities>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string rateColor = "";}
@{ string percentageColor = "";}
<br />
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yeteneklerim Listesi</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Abilities/AddAbility" class="btn btn-info">Yeni Yetenek Ekle</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">Id</th>
                                            <th>Yetenek</th>
                                            <th>Oran</th>
                                            <th style="width: 40px">Yüzde</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            if (0 <= x.Rate && x.Rate <= 50)
                                            {
                                                rateColor = "progress-bar bg-danger";
                                                percentageColor = "badge bg-danger";
                                            }
                                            if (51 <= x.Rate && x.Rate <= 70)
                                            {
                                                rateColor = "progress-bar bg-warning";
                                                percentageColor = "badge bg-warning";
                                            }
                                            if (71 <= x.Rate && x.Rate <= 84)
                                            {
                                                rateColor = "progress-bar bg-primary";
                                                percentageColor = "badge bg-primary";
                                            }
                                            if (85 <= x.Rate && x.Rate <= 100)
                                            {
                                                rateColor = "progress-bar bg-success";
                                                percentageColor = "badge bg-success";
                                            }
                                            <tr>
                                                <td>@x.Id</td>
                                                <td>@x.Ability</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@rateColor" style="width: @($"{x.Rate}%")"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@percentageColor">@x.Rate%</span></td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/Abilities/GetAbility/@x.Id">
                                                        <i class="fas fa-pencil-alt"></i>
                                                        Güncelle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Abilities/DeleteAbility/@x.Id">
                                                        <i class="fas fa-trash"></i>
                                                        Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>